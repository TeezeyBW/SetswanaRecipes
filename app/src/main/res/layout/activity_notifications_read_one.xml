<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="notificationsReadOneVM" type="com.tswanarecipe.app.modules.notificationsreadone.data.viewmodel.NotificationsReadOneVM"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearNotificationsR"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarToolbar"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_30pxh"
            android:layout_marginStart="@dimen/_30pxh"
            android:layout_marginTop="@dimen/_9pxv"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout android:id="@+id/linearHeader"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageArrowleft"
                    android:layout_height="@dimen/_10pxh"
                    android:layout_marginBottom="@dimen/_7pxv"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:layout_width="@dimen/_14pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrowleft_gray_900"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_arrowleft_gray_900"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtTitle"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_102pxh"
                    android:layout_weight="0.84"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{notificationsReadOneVM.notificationsReadOneModel.txtTitle}"
                    style="@style/txtPoppinssemibold18_2" tools:text="@string/lbl_reviews"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearRowcommentscounter"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_30pxh"
            android:layout_marginStart="@dimen/_30pxh"
            android:layout_marginTop="@dimen/_23pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtCommentsCounter"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_weight="0.61" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{notificationsReadOneVM.notificationsReadOneModel.txtCommentsCounter}"
                style="@style/txtPoppinsregular11" tools:text="@string/lbl_200_comments"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtSavedCounter"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginStart="@dimen/_175pxh"
                android:layout_weight="0.39" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{notificationsReadOneVM.notificationsReadOneModel.txtSavedCounter}"
                style="@style/txtPoppinsregular11" tools:text="@string/lbl_155_saved"/>
        </LinearLayout>
        <FrameLayout android:id="@+id/frameStacklabel"
            android:layout_height="@dimen/_643pxv"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginTop="@dimen/_13pxv" android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linearInputfield"
                android:layout_gravity="top|center"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_30pxh"
                android:layout_marginStart="@dimen/_30pxh"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtLabel"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{notificationsReadOneVM.notificationsReadOneModel.txtLabel}"
                    style="@style/txtPoppinsregular14" tools:text="@string/lbl_leave_a_comment"/>
                <FrameLayout android:id="@+id/frameStackplaceholder"
                    android:layout_height="@dimen/_59pxv"
                    android:layout_marginTop="@dimen/_1pxv" android:layout_width="@dimen/_315pxh">
                    <LinearLayout
                        android:id="@+id/linearColumnplaceholder"
                        android:layout_gravity="bottom|start"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_width="match_parent"
                        android:orientation="vertical" style="@style/groupStylecornerRadius_7">
                        <TextView android:ellipsize="end"
                            android:gravity="start"
                            android:id="@+id/txtPlaceholder"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/_18pxv"
                            android:layout_marginEnd="@dimen/_20pxh"
                            android:layout_marginStart="@dimen/_20pxh"
                            android:layout_marginTop="@dimen/_19pxv"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@{notificationsReadOneVM.notificationsReadOneModel.txtPlaceholder}"
                            style="@style/txtPoppinsregular11_2" tools:text="@string/msg_say_something"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end" android:gravity="center"
                        android:id="@+id/btnSend"
                        android:layout_gravity="top|end"
                        android:layout_height="@dimen/_35pxv"
                        android:layout_marginBottom="@dimen/_10pxv"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_width="@dimen/_59pxh"
                        android:paddingBottom="@dimen/_9pxv"
                        android:paddingEnd="@dimen/_15pxh"
                        android:paddingStart="@dimen/_15pxh"
                        android:paddingTop="@dimen/_9pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_send"
                        android:textAllCaps="false"
                        style="@style/btnSolidRounded_1" tools:text="@string/lbl_send"/>
                </FrameLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerListunsplash"
                android:layout_gravity="bottom|start"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_20pxh}"
                style="@style/groupStylewhite_A700" tools:itemCount="6" tools:listitem="@layout/row_listunsplash"/>
        </FrameLayout>
    </LinearLayout>
</layout>
