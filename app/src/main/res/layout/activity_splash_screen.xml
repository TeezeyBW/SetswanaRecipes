<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="splashScreenVM" type="com.tswanarecipe.app.modules.splashscreen.data.viewmodel.SplashScreenVM"/>
    </data>
    <FrameLayout android:id="@+id/frameSplashScreen"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylewhite_A700">
        <ImageView android:id="@+id/imageRectangleSix"
            android:layout_gravity="start"
            android:layout_height="@dimen/_779pxv"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            imageRes="@{@drawable/img_rectangle6}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle6"/>
        <LinearLayout android:id="@+id/linearColumnlanguage"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_40pxh"
            android:layout_marginVertical="@dimen/_40pxv"
            android:layout_width="match_parent" android:orientation="vertical">
            <ImageView android:id="@+id/imageImageEleven"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_79pxh"
                android:layout_marginEnd="@dimen/_13pxh"
                android:layout_marginStart="@dimen/_13pxh"
                android:layout_width="@dimen/_79pxh"
                android:scaleType="fitXY"
                imageRes="@{@drawable/img_image11}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_image11"/>
            <TextView android:ellipsize="end" android:gravity="start"
                android:id="@+id/txtLanguage"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{splashScreenVM.splashScreenModel.txtLanguage}"
                style="@style/txtPoppinssemibold18" tools:text="@string/msg_100_tswana_cui"/>
            <TextView android:gravity="center_horizontal"
                android:id="@+id/txtHeadertitle"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_9pxh"
                android:layout_marginTop="@dimen/_221pxv"
                android:layout_width="match_parent"
                android:text="@{splashScreenVM.splashScreenModel.txtHeadertitle}"
                style="@style/txtPoppinssemibold50" tools:text="@string/msg_setswana_cookin"/>
            <TextView android:gravity="center_horizontal"
                android:id="@+id/txtCaption"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_13pxh"
                android:layout_marginStart="@dimen/_13pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_width="match_parent"
                android:text="@{splashScreenVM.splashScreenModel.txtCaption}"
                style="@style/txtPoppinsregular16" tools:text="@string/msg_simple_way_to_f"/>
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearMediumButton"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_13pxh"
                android:layout_marginStart="@dimen/_13pxh"
                android:layout_marginTop="@dimen/_37pxv"
                android:layout_width="match_parent"
                android:orientation="horizontal" style="@style/groupStyleteal_600cornerRadius">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtLabel"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_13pxv"
                    android:layout_marginStart="@dimen/_51pxh"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_weight="0.89"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{splashScreenVM.splashScreenModel.txtLabel}"
                    style="@style/txtPoppinssemibold16_1" tools:text="@string/lbl_start_cooking"/>
                <ImageView android:id="@+id/imageArrowright"
                    android:layout_height="@dimen/_11pxh"
                    android:layout_marginBottom="@dimen/_21pxv"
                    android:layout_marginEnd="@dimen/_53pxh"
                    android:layout_marginStart="@dimen/_13pxh"
                    android:layout_marginTop="@dimen/_21pxv"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrowright"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_arrowright"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>
