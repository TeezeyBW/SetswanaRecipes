<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="ingridientlistRowModel" type="com.tswanarecipe.app.modules.recipeingrident.data.model.IngridientlistRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearRecipe"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal" style="@style/groupStylebluegray_100_87cornerRadius">
        <LinearLayout android:id="@+id/linearRowrectangle650"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12pxv"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_12pxv"
            android:layout_weight="0.8" android:layout_width="0dp" android:orientation="horizontal">
            <LinearLayout android:gravity="center_horizontal"
                android:id="@+id/linearImage"
                android:layout_height="wrap_content"
                android:layout_weight="0.42" android:layout_width="0dp"
                android:orientation="vertical" style="@style/groupStylewhite_2">
                <FrameLayout android:id="@+id/frameStackrectangle650"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_40pxv"
                    android:layout_marginHorizontal="@dimen/_6pxh"
                    android:layout_marginVertical="@dimen/_6pxv"
                    android:layout_width="@dimen/_40pxh" style="@style/groupStylecornerRadius_1">
                    <ImageView android:id="@+id/imageIngridienticon"
                        android:layout_gravity="start"
                        android:layout_height="@dimen/_40pxh"
                        android:layout_width="@dimen/_40pxh"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_10pxh}"
                        imageRes="@{@drawable/img_rectangle650}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle650"/>
                </FrameLayout>
            </LinearLayout>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTomatos"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10pxv"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_17pxv"
                android:layout_weight="0.58" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{ingridientlistRowModel.txtTomatos}"
                style="@style/txtPoppinssemibold16_2" tools:text="@string/lbl_tomatos"/>
        </LinearLayout>
        <TextView android:ellipsize="end" android:id="@+id/txtWeight"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_25pxv"
            android:layout_marginEnd="@dimen/_15pxh"
            android:layout_marginStart="@dimen/_108pxh"
            android:layout_marginTop="@dimen/_29pxv"
            android:layout_weight="0.2" android:layout_width="0dp"
            android:singleLine="true"
            android:text="@{ingridientlistRowModel.txtWeight}"
            style="@style/txtPoppinsregular14_1" tools:text="@string/lbl_500g"/>
    </LinearLayout>
</layout>
